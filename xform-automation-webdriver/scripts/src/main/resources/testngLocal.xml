<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="TestSuite" thread-count="3" parallel="tests">
    <listeners>
        <listener class-name="com.janeirodigital.xform.webdriver.listeners.TestListener"/>
    </listeners>

    <test name="ChromeHeadLessTest">
        <parameter name="browser" value="CHROME_HEAD_LESS_WIN"/>
        <classes>
            <class name="com.janeirodigital.xform.webdriver.scripts.Scripts">
            </class>
        </classes>
    </test>
    <test name="ChromeLinux64Test">
        <parameter name="browser" value="CHROME_LINUX_64"/>
        <classes>
            <class name="com.janeirodigital.xform.webdriver.scripts.Scripts">
            </class>
        </classes>
    </test>
    <test name="PhantomJSLinux64Test">
        <parameter name="browser" value="PHANTOM_JS_LINUX_64"/>
        <classes>
            <class name="com.janeirodigital.xform.webdriver.scripts.Scripts">
            </class>
        </classes>
    </test>
    <test name="PhantomJSTest">
        <parameter name="browser" value="PHANTOM_JS_WIN"/>
        <classes>
            <class name="com.janeirodigital.xform.webdriver.scripts.Scripts">
            </class>
        </classes>
    </test>

    <test name="ChromeTest">
        <parameter name="browser" value="CHROME_WIN"/>
        <classes>
            <class name="com.janeirodigital.xform.webdriver.scripts.Scripts">
            </class>
        </classes>
    </test>

    <test name="FirefoxTest">
        <parameter name="browser" value="FIREFOX_WIN"/>
        <classes>
            <class name="com.janeirodigital.xform.webdriver.scripts.Scripts">
            </class>
        </classes>
    </test>

    <test name="EdgeTest">
        <parameter name="browser" value="EDGE_WIN"/>
        <classes>
            <class name="com.janeirodigital.xform.webdriver.scripts.Scripts">
            </class>
        </classes>
    </test>

</suite>